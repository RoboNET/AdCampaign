@model AdCampaign.BLL.Services.Adverts.DTO.AdvertDto
@{
    ViewBag.Title = "Создание рекламной кампании";
}

<h2>Создание рекламной кампании</h2>
<div class="container">
    <div class="row">
        <form asp-controller="Advert" asp-action="Create" method="post" class="col-6" enctype='multipart/form-data'>
            <div class="form-group">
                <label for="Name">Название кампании</label>
                <input type="text" class="form-control" id="Name" name="Name">
            </div>
            <div class="form-group">
                <label for="PrimaryImage">Большая картинка</label>
                <input type="file" class="form-control-file" id="PrimaryImage" name="PrimaryImage">
            </div>
            <div class="form-group">
                <label for="SecondaryImage">Маленькая картинка</label>
                <input type="file" class="form-control-file" id="SecondaryImage" name="SecondaryImage" >
            </div>

            <div class="form-group">
                <label for="ImpressingDateFrom">Дата начала показа рекламы</label>
                <input id="ImpressingDateFrom" name="ImpressingDateFrom" width="276"/>
            </div>

            <div class="form-group">
                <label for="ImpressingDateTo">Дата окончания показа рекламы</label>
                <input id="ImpressingDateTo" name="ImpressingDateTo" width="276"/>
            </div>

            <div class="form-group">
                <label for="ImpressingTimeFrom">Время начала показа рекламы</label>
                <input id="ImpressingTimeFrom" name="ImpressingTimeFrom" width="276"/>
            </div>

            <div class="form-group">
                <label for="ImpressingTimeTo">Время окончания показа рекламы</label>
                <input id="ImpressingTimeTo" name="ImpressingTimeTo" width="276"/>
            </div>

            <div class="form-group">

                <label for="RequestType">Тип запрашиваемой информации</label>
                <select class="form-control" id="RequestType" name="RequestType">
                    <option value="1">Телефон</option>
                    <option value="2">E-mail</option>
                    <option value="3">Телефон + E-mail</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Создать</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
                $('#ImpressingDateFrom').datepicker({
                    uiLibrary: 'bootstrap4'
                });
                $('#ImpressingDateTo').datepicker({
                    uiLibrary: 'bootstrap4'
                });
                
                $('#ImpressingTimeFrom').timepicker({
                    uiLibrary: 'bootstrap4'
                });
                $('#ImpressingTimeTo').timepicker({
                    uiLibrary: 'bootstrap4'
                });

    </script>
}
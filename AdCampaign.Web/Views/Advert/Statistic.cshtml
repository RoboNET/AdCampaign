@using AdCampaign.DAL.Entities
@model System.Collections.Generic.ICollection<AdCampaign.DAL.Entities.AdvertStatistic>

@{
    ViewBag.Title = "Статистика показов";
}

<div class="container">

    <div class="row justify-content-center">
        <h1 class="col-12">Список заявок</h1>
    </div>
    @if (ViewData["AdName"] is string adName)
    {
        <div class="row justify-content-center">
            <h3 class="col-12">@adName</h3>
        </div>
    }

    <div class="row justify-content-center">
        <table class="col-12 table">
            <tr>
                <th>Name</th>
                <th>Count</th>
            </tr>
            @{
                foreach (var advert in Model)
                {
                    <tr>
                        <td>
                            @(advert.AdvertStatisticType switch{AdvertStatisticType.Filled => "Отправок формы", AdvertStatisticType.Followed=> "Открытий", AdvertStatisticType.Impression=>"Показов", _=> advert.AdvertStatisticType.ToString()})
                        </td>
                        <td>
                            @advert.Value
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>